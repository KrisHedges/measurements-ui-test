@import 'fluidity'
@import 'fontstyle'

@keyframes fadeIn
  0%
    opacity 0
  100%
    opacity 1

@keyframes blink
  0%
    opacity 0
  20%
    opacity 1
  30%
    opacity 0
  40%
    opacity 1
  50%
    opacity 0
  70%
    opacity 1
  100%
    opacity 1

@keyframes scaleIn
  0%
    transform scale(0)
  100%
    transform scale(1)

